<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewExample1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_before"/>

        <Button
            android:id="@+id/buttonExample1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_example1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextExample2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_preference"/>

        <Button
            android:id="@+id/buttonExample2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_example2"/>
    </LinearLayout>

</LinearLayout>
